# Email Sync Environment Configuration
# Copy this file to .env and update with your actual values

# OAuth2 Configuration
OAUTH_REDIRECT_URI=http://localhost:8080/callback

# Destination Server Configuration (optional, can be set via CLI)
DEST_IMAP_HOST=localhost
DEST_IMAP_PORT=993
DEST_IMAP_SSL=true
DEST_IMAP_SSL_VERIFY=false

# Logging Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false

# Azure OAuth2 Credentials (alternative to CLI arguments)
# AZURE_CLIENT_ID=your-client-id-here
# AZURE_CLIENT_SECRET=your-client-secret-here
# AZURE_TENANT_ID=common

# Note: Sensitive values like passwords should not be stored in environment files.
# Use the interactive prompts or configuration file instead.
